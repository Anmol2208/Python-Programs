n = int(input())
for i in range(n):
    for space in range(0, n-i):
        print(end =" ")
    for j in range(0,i+1):
        print("*", end =" ")
    print(" ")
for i in range(n,0-1,-1):
    for space in range(0, n-i):
        print(end =" ")
    for j in range(0,i+1):
        print("*", end =" ")
    print(" ")
