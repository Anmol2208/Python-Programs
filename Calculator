n1 = int(input("Enter the 1st no. "))
n2 = int(input("Enter the 2nd no. "))
print("Choose the option wisely 1-add, 2- sub, 3- mul, 4- divide")
n3 = int(input("Enter the option. "))
if (n3 ==1 ):
    print(n1+n2)
elif(n3 == 2):
    print(n1-n2)
elif(n3 == 3):
    print(n1 * n2)
elif(n3 == 4):
    print(n1/n2)
else:
    print("Invalid input")
